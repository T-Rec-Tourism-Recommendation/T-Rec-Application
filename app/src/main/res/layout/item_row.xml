<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_destinasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp"
    android:padding="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_destinasi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/landing_background"
            android:scaleType="centerCrop"
            android:contentDescription="@string/destination_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_destinasi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text 1"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_destinasi_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text 2"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_fav_destinasi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/fav_icon"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
